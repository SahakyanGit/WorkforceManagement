
@model WorkforceManagement.DTO.Models.EmployeeDto
@{
    ViewData["Title"] = "Registration";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-theme.css" />
<link rel="stylesheet" href="~/lib/sweetalert/dist/sweetalert.css" />
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

@using (Html.BeginForm("Registration", "Account",FormMethod.Post))
{
    @Html.ValidationSummary();
    <br />
    <input type="text" placeholder="Email" class="form-control" name="email" size="30" />
    <br />
    <input  type="password" placeholder="Password" class="form-control" name="password"  size="30" />
    <br />
    <input type="text" placeholder="Name" class="form-control" name="name"  size="30" />
    <br />
    <input type="text" placeholder="Last Name" class="form-control" name="lastname"  size="30" />
    <br />
    <label title="Birth">Birth:</label>
    <br />
    <input type="date" placeholder="Birth" class="form-control" name="Birth"  size="30" />
    <br />
    <label title="Profession">Profession:</label>
    <br />
    <select name="Profession"  class="form-control">
        <option selected="selected">Programmer</option>
        <option>HR manager</option>
        <option>IT systems administrator</option>
        <option>IT Support Manager</option>
    </select>
    <br />
    <button id="btn" type="submit" style="margin-right:70px" class="btn btn-success " value="submit">Create</button>
}

<script>
    $("button").click(function () {
           swal("Good job!", "you have been successfully registered", "success")
       })
</script>


<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/lib/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>